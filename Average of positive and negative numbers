# Sample list of numbers (positive and negative)
numbers = [5, -3, 7, -8, 2, -4]
sum_positive = 0
count_positive = 0
sum_negative = 0
count_negative=0
for num in numbers:
    if num > 0:
        sum_positive += num
        count_positive += 1
    elif num < 0:
        sum_negative += num
        count_negative += 1
average_positive = sum_positive / count_positive if count_positive != 0 else 0
average_negative = sum_negative / count_negative if count_negative != 0 else 0
print("Average of positive numbers:", average_positive)
print("Average of negative numbers:", average_negative)
